<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.czq.kotlinarch">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".App"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:networkSecurityConfig="@xml/network_security_config"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".example.DatabindingActivity">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".example.CoverActivity"/>
        <activity android:name=".example.PagingListActivity"/>
        <activity android:name=".example.NormalFragmentActivity"/>
        <activity android:name=".example.CoverFragmentActivity"/>
        <activity android:name=".example.GameListActivity"/>
        <activity android:name=".example.FeedArticleActivity"/>
        <activity android:name=".example.NoCoverActivity"/>

    </application>

</manifest>